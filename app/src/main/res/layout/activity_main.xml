<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ldrSensorValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LDR Sensor Value"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/irSensorStatusImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/ldrSensorValueTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/irSensorStatusImageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/irSensorStatusImageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/irSensorStatusImageView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/irSensorStatusImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFull"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginTop="300dp"
        android:text="Parking is FULL!!!"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/ldrChart"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>